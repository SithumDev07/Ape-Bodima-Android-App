<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/ad_selector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/annexView1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/annex_ad_1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/AnnexAd1TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:text="Annex in Kelaniya"
            android:textColor="#57606f" />

        <RatingBar
            android:id="@+id/Ratingad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            android:stepSize="0.5"
            android:numStars="5"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/NoOfRooms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Rooms : "
            android:textColor="@color/lightGrey" />
        
        <TextView
            android:id="@+id/NoOfBathrooms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Bathrooms"
            android:textColor="@color/lightGrey" />
        
        <TextView
            android:id="@+id/RentalPerMonthAd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey"
            android:fontFamily="@font/baloo"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="Rs:22000"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
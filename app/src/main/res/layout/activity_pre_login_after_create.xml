<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="prelogin"
    tools:context=".PreLoginAfterCreate">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyUI"
            android:layout_marginTop="40dp"
            android:textSize="27dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            android:text="Please Login" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyUI"
            android:layout_below="@id/textView17"
            android:layout_marginTop="5dp"
            android:textSize="27dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_semibold"
            android:textAllCaps="false"
            android:text="With Your ID and Password" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:background="@drawable/get_in_in_active"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_light"
            android:textColor="@color/greyUI"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="back to login" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ClientDp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/profile_login_activity" />

    </RelativeLayout>




</RelativeLayout>
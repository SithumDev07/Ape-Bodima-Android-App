<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_clinet_create1"
    android:padding="30dp"
    tools:context=".ClientCreatePt4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/create_Acc_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            />

        <TextView
            android:id="@+id/CreateAccTextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Create An Account"
            android:textAllCaps="true"
            android:textColor="@color/greyUI"
            android:textSize="30sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120dp"
            android:layout_marginTop="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ProfilePictureClient"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:onClick="SelectPhoto"
                android:transitionName="logo_image"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo_add_icon_clipart" />


        </RelativeLayout>


        <Button
            android:id="@+id/UploadPictureBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:elevation="5dp"
            android:onClick="CallNextWindow"
            android:text="Upload Photo"
            android:textColor="@color/white"
            android:transitionName="prelogin" />

        <Button
            android:id="@+id/SkipBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:elevation="5dp"
            android:onClick="RedirectClientDashboard"
            android:text="Skip this step"
            android:textAllCaps="false"
            android:textColor="@color/greyUI"
            android:transitionName="prelogin" />

        <Button
            android:id="@+id/BackToLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#00000000"
            android:elevation="5dp"
            android:onClick="callLoginback"
            android:text="Back to login"
            android:textColor="@color/greyUI"
            android:transitionName="transition_client" />

    </LinearLayout>


</ScrollView>
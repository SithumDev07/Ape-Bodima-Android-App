<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/BoardingAdImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:layout_centerVertical="true"
            android:scaleY="1"
            app:srcCompat="@drawable/photo_adfirst" />

        <TextView
            android:id="@+id/AnnexAd1TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:textSize="21sp"
            android:layout_marginLeft="160dp"
            android:text="Annex in Kelaniya"
            android:textColor="#57606f" />

        <RatingBar
            android:id="@+id/Ratingad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            android:stepSize="1"
            android:layout_marginLeft="160dp"
            android:layout_below="@id/AnnexAd1TextTitle"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/NoOfRooms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:layout_below="@id/Ratingad1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="160dp"
            android:text="Rooms : "
            android:textColor="@color/lightGrey" />

        <TextView
            android:id="@+id/NoOfBathrooms1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NoOfRooms1"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/regular"
            android:text="Bathrooms"
            android:textColor="@color/lightGrey" />

        <TextView
            android:id="@+id/RentalPerMonthAd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightGrey"
            android:layout_below="@id/NoOfBathrooms1"
            android:layout_marginLeft="160dp"
            android:fontFamily="@font/baloo"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="Rs:22000"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
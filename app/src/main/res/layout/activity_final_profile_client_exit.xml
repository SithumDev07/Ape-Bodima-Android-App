<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalProfileClientExit">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="0dp">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:srcCompat="@drawable/logo_holder_snow_big" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:paddingLeft="120dp"
        android:paddingRight="120dp">


        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/dp_final" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView16"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunito_light"
            android:paddingTop="18dp"
            android:text="Sithum"
            android:textColor="@color/greyUI"
            android:textSize="24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingTop="30dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greyUI"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_semibold"

            android:text="Joined Dec 5 - 2020" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:paddingTop="14dp"
            android:textColor="@color/greyUI"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Username - Wanderer_07" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_below="@id/textView9"
            android:layout_height="wrap_content"
            android:text="Age : 24"
            android:paddingTop="14dp"
            android:textColor="@color/greyUI"
            android:textSize="20dp"
            android:fontFamily="@font/nunito_semibold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:padding="30dp">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editAccountButton"
            android:fontFamily="@font/nunito_light"
            android:textColor="@color/greyUI"
            android:layout_marginTop="20dp"
            android:background="@drawable/get_in_active" />

        <ImageButton
            android:id="@+id/editAccountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/edit_account" />

    </RelativeLayout>
</RelativeLayout>